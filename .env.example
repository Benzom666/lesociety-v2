# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=<YOUR_SUPABASE_PROJECT_URL>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<YOUR_SUPABASE_ANON_KEY>

# Server-Only Keys (NEVER expose to browser)
SUPABASE_SERVICE_ROLE_KEY=<YOUR_SUPABASE_SERVICE_ROLE_KEY>
DATABASE_URL=postgresql://postgres:<PASSWORD>@db.<PROJECT_REF>.supabase.co:5432/postgres

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Admin Authentication (Server-Only)
ADMIN_TOKEN=<GENERATE_RANDOM_TOKEN_HERE>

# Optional Services
NEXT_PUBLIC_MAPBOX_TOKEN=<YOUR_MAPBOX_TOKEN>

# Production URLs (Set these in Vercel for deployed apps)
# Web app: https://lesociety.vercel.app
# Admin app: https://lesociety-admin.vercel.app
